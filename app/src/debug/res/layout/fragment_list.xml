<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/territoryList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/primary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fbAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="24dp"
        android:clickable="true"
        android:contentDescription="@string/add"
        android:focusable="true"
        app:backgroundTint="@color/secondary_50a"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/ic_baseline_add_24" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fbAddTerr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:clickable="true"
        android:visibility="invisible"
        app:backgroundTint="@color/secondary_50a"
        app:layout_constraintBottom_toTopOf="@+id/fbAdd"
        app:layout_constraintEnd_toEndOf="@+id/fbAdd"
        app:srcCompat="@drawable/ic_baseline_add_location_alt_24"
        android:focusable="true" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fbAddContact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:clickable="true"
        android:visibility="invisible"
        app:backgroundTint="@color/secondary_50a"
        app:layout_constraintBottom_toTopOf="@+id/fbAddTerr"
        app:layout_constraintEnd_toEndOf="@+id/fbAddTerr"
        app:srcCompat="@drawable/ic_baseline_person_add_alt_1_24"
        android:focusable="true" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fbAddClock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:clickable="true"
        android:visibility="invisible"
        app:backgroundTint="@color/secondary_50a"
        app:layout_constraintBottom_toTopOf="@+id/fbAddContact"
        app:layout_constraintEnd_toEndOf="@+id/fbAddContact"
        app:srcCompat="@drawable/ic_baseline_alarm_add_24"
        android:focusable="true" />


</androidx.constraintlayout.widget.ConstraintLayout>